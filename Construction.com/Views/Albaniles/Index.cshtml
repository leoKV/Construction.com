@model IEnumerable<Construction.com.Albanil>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/Content/css/albanil.css"/>
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail" style="background-color: blueviolet">
                <img src="..." alt="...">
                <div class="caption" style="color:white;">
                    <h3>Albañil</h3>
                    <p><b>Nombre Completo:</b></p>
                    <p>@Html.DisplayFor(modelItem => item.nombreCompleto)</p>
                    <p><b>Domicilio:</b></p>
                    <p>@Html.DisplayFor(modelItem => item.domicilio)</p>
                    <p><b>Años de Experiencia:</b></p>
                    <p>@Html.DisplayFor(modelItem => item.aniosExpe) años</p>
                    <p><b>Contactos:</b></p>
                    <p>@Html.DisplayFor(modelItem => item.contactos)</p>
                    <button type="button" class="btn btn-success dropdown-toggle" aria-haspopup="true" aria-expanded="false">@Html.ActionLink("Ver Perfil", "Details", new { id = item.codigoAl })</button>
                </div>
            </div>
        </div>
    }
</div>