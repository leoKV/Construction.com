}

<h2>Details</h2>

<div>
    <h4>Albañil</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombreCompleto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreCompleto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.domicilio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.domicilio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.aniosExpe)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.aniosExpe)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.trabajosAnteriores)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.trabajosAnteriores)
